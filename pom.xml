    <groupId>it.edea</groupId>
    <artifactId>wldiag</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>WLDiag</name>
    <description>WebLogic Diagnostic Image Analyzer Tool</description>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
